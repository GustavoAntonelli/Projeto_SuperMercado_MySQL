<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">

    <title>Cadastrar Livro</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark ">
          <a class="navbar-brand" href="#"><img id="logo" src="imagens/5d26a173f443cbd190e34481438d474b.png"
              class="img-fluid" width="70" height="70"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado"
            aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
            <ul class="navbar-nav mr-auto bd-navbar">
              <li class="nav-item active">
                <a class="nav-link" href="/produtos">Home <span class="sr-only">(página atual)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/cadastrarProduto">Cadastrar Produto</a>
              </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="/procuraProduto" method="GET">
              <input class="form-control mr-sm-2" name="procura" type="search" placeholder="Pesquisar"
                aria-label="Pesquisar">
              <button class="btn my-2 my-sm-0 mr-1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                  height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                  <path
                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg></button>
            </form>
            <a href="/login" class="btn mr-1">Login</a>
            <a href="/register" class="btn mr-1">Sing Up</a>
            <button class="btn  mr-1" onclick="aumentarFonte()"><img src="imagens/icon_font_more.png"></button>
            <button class="btn  mr-1" onclick="diminuirFonte()"><img src="imagens/icon_font_less.png"></button>
            <button class="btn  mr-1" onclick="modoClaro()"><img src="imagens/icon_sun.png"></button>
            <button class="btn  mr-1" onclick="modoEscuro()"><img src="imagens/icon_moon.png"></button>
          </div>
        </nav>
      </header>

  <section class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5">Editar Produto</h1>
            <form action="/editarProduto" method="POST">

                <div class="form-group">
                    <label for="codigo_categoria">Id</label>
                    <input type="text" id="Id" name="codigo_categoria" placeholder="Id" class="form-control" required value="<%=produto_item.codigo_categoria %>">
                </div>

                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome_produto" placeholder="Nome" class="form-control"
                        onblur="valida_nome(this)" required value="<%=produto_item.nome_produto %>">
                </div>

                <div class="form-group">
                    <label for="marca">Marca</label>
                    <input type="text" onblur="valida_autor(this)" id="marca" name="marca_produto" class="form-control" placeholder="Marca" required value="<%=produto_item.marca_produto %>">
                </div>

                <div class="form-group">
                    <label for="autor">Quantidade</label>
                    <input type="number" onblur="valida_autor(this)" id="quantidade" name="quantidade" class="form-control" placeholder="Quantidade" required value="<%=produto_item.quantidade %>">
                </div>

                <input type="hidden" name="id_produto" value="<%=produto_item.id_produto %>">
                <button type="submit" id="enviar" class="btn btn-primary" onclick="enviar_dados()">Salvar</button>
            </form>
        </div>
    </div>
</section>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="js/validacao.js"></script>

    <div vw class="enabled">
      <div vw-access-button class="active"></div>
      <div vw-plugin-wrapper>
        <div class="vw-plugin-top-wrapper"></div>
      </div>
    </div>
    <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
    <script>
      new window.VLibras.Widget('https://vlibras.gov.br/app');
    </script>
</body>
</html>